<%- include('./header.ejs') %>

    </head>
    <title>
        <%= pageTitle %>
    </title>

    <body>
        <%- include('./navbar.ejs') %>
            <% if (users.length> 0) { %>
                <div>
                    <% for (let every of users) { %>
                        <p>First Name: <%= every.fname %>
                        </p>
                        <p>Last Name: <%= every.lname %>
                        </p>
                        <p>Email: <%= every.email %>
                        </p>
                        <p>Phone: <%= every.phone %>
                        </p>
                        <p>Manager: <%= every.manager===null ? 'false' :'true' %>
                        </p>
                        <form action="/admin" method="POST">
                            <button value="<%= every.userId %>" name="id" type="submit">Add Manager</button>
                        </form>
                        <form action="/admin-remove" method="POST">
                            <button value="<%= every.userId %>" name="id" type="submit">Remove Manager</button>
                        </form>

                        <% } %>
                </div>
                <% } else {%>
                    <p>No Users Available</p>
                    <% } %>
    </body>