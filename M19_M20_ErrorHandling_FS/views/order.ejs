<%- include('./header.ejs') %>

    </head>
    <title>
        <%= pageTitle %>
    </title>

    <body>
        <%- include('./navbar.ejs') %>

            <% if (orders.length !=0){ %>

                <h1>User Name: <%= orders[0].userId.name %>
                </h1>
                <h1>User Email: <%= orders[0].userId.email %>
                </h1>

                <% for (let order of orders){ %>
                    <div>
                        <% for (let each of order.orderedItems){ %>
                            <div>
                                <p>Product: <%= each.productId.title %>
                                </p>
                                <p>Price: Tk<%= each.productId.price %>
                                </p>
                                <p>Quantity: <%= each.quantity %>
                                </p>
                                <p>Total: Tk<%= each.productId.price*each.quantity %>
                                </p>
                            </div>
                            <% } %>
                                <h3>To pay: Tk<%= order.subTotal %>
                                </h3>
                                <a href="order/<%= order._id %>">Invoice</a>
                    </div>
                    <% } %>
                        <% } else { %>
                            <h3>No order yet</h3>
                            <% } %>

    </body>
    </body>